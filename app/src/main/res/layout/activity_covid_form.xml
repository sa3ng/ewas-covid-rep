<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CovidFormActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_covid_form__logo_iv"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ewas_logo_final"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:dividerInsetEnd="32dp"
            app:dividerInsetStart="16dp"
            app:layout_constraintBottom_toTopOf="@id/activity_covid_form__question_one_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_covid_form__logo_iv" />

        <LinearLayout
            android:id="@+id/activity_covid_form__question_one_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_covid_form__logo_iv">

            <TextView
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have you experienced any of the following these last few days?"
                android:textAlignment="center" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__fever_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Fever" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__cough_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Cough" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__short_breath_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Short Breath" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__fatigue_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Fatigue" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__body_ache_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Muscle or Body Aches" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__sore_throat_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Sore Throat" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__runny_nose_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Runny Nose" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__nausea_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Nausea" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/activity_covid_form__question_one_container__diarrhea_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Diarrhea" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:dividerInsetEnd="32dp"
            app:dividerInsetStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_covid_form__question_one_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>